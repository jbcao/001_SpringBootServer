<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <bean id="helloWorld" class="com.src.practise.ooc_spring.ood_annotation.ooe_based_on_java.event.HelloWorld">
           <property name="message" value="你好 中国"/>
    </bean>

    <bean id="cStartEventHandler" class="com.src.practise.ooc_spring.ood_annotation.ooe_based_on_java.event.CStartEventHandler"/>
    <bean id="cStopEventHandler" class="com.src.practise.ooc_spring.ood_annotation.ooe_based_on_java.event.CStopEventHandler"/>


</beans>